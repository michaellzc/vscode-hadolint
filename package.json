{
  "name": "hadolint",
  "displayName": "hadolint",
  "description": "Integrates hadolint, a Dockerfile linter, into VS Code.",
  "author": "Michael Lin <mlzc@hey.com>",
  "license": "MIT",
  "version": "1.0.2",
  "publisher": "exiasr",
  "icon": "hadolint.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExiaSR/vscode-hadolint"
  },
  "categories": [],
  "keywords": [
    "hadolint",
    "docker",
    "dockerfile",
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.52.0",
    "node": "^12"
  },
  "activationEvents": [
    "onLanguage:dockerfile",
    "onCommand:hadolint.selectExecutable"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Hadolint - A Dockerfile linter",
      "properties": {
        "hadolint.hadolintPath": {
          "type": "string",
          "default": "hadolint",
          "description": "Path to hadolint executable. Windows user, make sure you escape the back slash in the path, e.g, C:\\\\path\\to\\\\hadolint\\\\excutable"
        },
        "hadolint.cliOptions": {
          "type": "array",
          "default": [
            "--no-color"
          ],
          "description": "A list of supported hadolint CLI options"
        },
        "hadolint.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "hadolint.outputLevel": {
          "type": "string",
          "enum": [
            "error",
            "info",
            "warning",
            "hint"
          ],
          "default": "warning",
          "description": "Set the default output level of hadolint message."
        }
      }
    },
    "commands": [
      {
        "command": "hadolint.selectExecutable",
        "title": "Select Hadolint Executable",
        "category": "Hdolint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "rimraf client/out && rimraf server/out",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^12.12.0",
    "merge-options": "^3.0.4",
    "rimraf": "^3.0.2",
    "rome": "^10.0.4-beta",
    "ts-loader": "^8.0.17",
    "typescript": "^4.0.2",
    "vsce": "^1.85.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  }
}
